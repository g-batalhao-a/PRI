{
	"add-field-type": [
        {
            "name":"commaSeparatedText",
            "class":"solr.TextField",
            "analyzer":{
                "tokenizer":{
                    "class":"solr.PatternTokenizerFactory", "pattern": ",\\s+"
                },
                "filters":[
                    {"class":"solr.ASCIIFoldingFilterFactory", "preserveOriginal":true},
                    {"class":"solr.LowerCaseFilterFactory"}
                ]
            }
        },
        {
            "name":"title",
            "class":"solr.TextField",
            "indexAnalyzer":{
                "tokenizer":{
                    "class":"solr.StandardTokenizerFactory"
                },
                "filters":[
                    {"class":"solr.ASCIIFoldingFilterFactory", "preserveOriginal":true},
                    {"class":"solr.LowerCaseFilterFactory"},
                    {"class":"solr.EnglishMinimalStemFilterFactory"},
                    {"class":"solr.EdgeNGramFilterFactory", "minGramSize":"2", "maxGramSize":"5", "preserveOriginal":true}
                ]
            },
            "queryAnalyzer":{
                "tokenizer":{
                    "class":"solr.StandardTokenizerFactory"
                },
                "filters":[
                    {"class":"solr.ASCIIFoldingFilterFactory", "preserveOriginal":true},
                    {"class":"solr.LowerCaseFilterFactory"},
                    {"class":"solr.EnglishMinimalStemFilterFactory"}
                ]
            }
        },
        {
            "name": "integer",
            "class": "solr.IntPointField",
            "docValues": true
        },
        {
            "name": "float",
            "class": "solr.FloatPointField",
            "docValues": true
        },
        {
            "name": "uiString",
            "class": "solr.StrField",
            "indexed": false,
            "docValues": false
        },
        {
            "name": "date",
            "class": "solr.DatePointField"
        }
    ],
    "add-field": [
        {
            "name": "Name",
            "type": "title"
        },
        {
            "name": "RecipeCategory",
            "type": "title"
        },
        {
            "name": "Description",
            "type": "text_en"
        },
        {
            "name": "RecipeInstructions",
            "type": "text_en"
        },
        {
            "name": "Review",
            "type": "text_en"
        },
        {
            "name": "Calories",
            "type": "float"
        },
        {
            "name": "AggregatedRating",
            "type": "float"
        },
        {
            "name": "ReviewCount",
            "type": "integer"
        },
        {
            "name": "Rating",
            "type": "integer"
        },
        {
            "name": "RecipeServings",
            "type": "integer"
        },
        {
            "name": "Keywords",
            "type": "commaSeparatedText"
        },
        {
            "name": "RecipeIngredientParts",
            "type": "commaSeparatedText"
        },
        {
            "name": "Type",
            "type": "string"
        },
        {
            "name": "AuthorName",
            "type": "string"
        },
        {
            "name": "Images",
            "type": "uiString"
        },
        {
            "name": "URL",
            "type": "uiString"
        }
    ],
    "add-dynamic-field": [
        {
            "name": "*Id",
            "type": "integer"
        },
        {
            "name": "*Time",
            "type": "integer"
        },
        {
            "name": "Date*",
            "type": "date"
        },
        {
            "name": "*Content",
            "type": "float"
        }
    ]
}
